// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  Station   Station[]
}

model Computor {
  id           Int       @id @unique
  serialNumber String
  Station      Station[]
}

model Station {
  id         Int      @id @default(autoincrement())
  computer   Computor @relation(fields: [computorId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
  computorId Int
  userId     Int
}
